<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.example.tomas.mytasks">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_task"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_task_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" tools:ignore="GoogleAppIndexingWarning"
            android:name=".app.MyNotesApp">
        <activity android:name=".board.BoardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".creator.TaskMakerActivity"
                  android:parentActivityName=".board.BoardActivity">
        </activity>
    </application>

</manifest>